#include<iostream>
using namespace std;
class Calculator{
    public:
        float num1, num2;
        void add(){
            cout<<"Result "<<(num1+num2)<<endl;
        }
        void subtract(){
            cout<<"Result "<<(num1-num2)<<endl;
        }
        void multiply(){
            cout<<"Result "<<(num1*num2)<<endl;
        }
        void divide(){
            if(num2!=0)
                cout<<"Result "<<(num1/num2)<<endl;
            else
                cout<<"Infinity!"<<endl;
        }
};
int main() {
    Calculator calc;
    int choice;
    cout << "Enter first number: ";
    cin >> calc.num1;
    cout << "Enter second number: ";
    cin >> calc.num2;
 cout << "Choose operation ";
cout << "1)Addition "; 
cout << "2)Subtraction ";
 cout << "3)Multiplication ";
  cout << "4)Division "; 
cout << "Enter choice (1-4): ";
 cin >> choice;
switch(choice){
        case 1:calc.add();break;
        case 2:calc.subtract();break;
        case 3:calc.multiply();break;
        case 4:calc.divide();break;
        default:cout<<"Invalid choice"<<endl;
    }

    return 0;
}
/*Output:-
Enter first number: 2
Enter second number: 5
Choose operation 1)Addition 2)Subtraction 3)Multiplication 4)Division Enter choice (1-4): 3
Result 10
*/
